<%= provide(:title, "编辑资料") %>
<h1>编辑你的吃货三维</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<% render 'shared/error_messages' %>

			<%= f.label :name, "称呼" %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :email, "邮箱" %>
			<%= f.text_field :email, class: 'form-control' %>

			<%= f.label :password, "暗号" %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.label :password_confirmation, "确认暗号" %>
			<%= f.password_field :password_confirmation, class: 'form-control' %>

			<%= f.submit "保存吃货信息", class: "btn btn-primary" %>
		<% end %>
		<div class="gravatar_edit">
			<%= gravatar_for @user %>
			<a href="http://gravatar.com/emails" target="_blank">洗心革面</a>
		</div>
	</div>
</div>