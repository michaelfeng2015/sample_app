<% provide(:title, "吃货要登录") %>
<h1>登陆</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :吃货邮箱 %>
        <%= f.text_field :email %>

        <%= f.label :吃货暗号 %>
        <%= f.password_field :password %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>记住我哟</span>
        <% end %>

        <%= f.submit "登陆吃货", class: "btn btn-primary" %>
    <% end %>

    <p>还没入伙？<%= link_to "现在就成为大吃货", signup_path %></p>
  </div>
</div>